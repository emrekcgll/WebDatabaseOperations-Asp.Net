
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link href="~/Login/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Login/css/single.css" rel='stylesheet' type='text/css' />
    <link href="~/Login/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Login/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">
</head>

<body>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Login</h3>
            <div class="row inner-sec">
                <div class="login p-5 bg-light mx-auto mw-100">
                    <form method="post">
                        <div class="form-group">
                            <label for="exampleInputEmail1 mb-2">Username</label>
                            <input type="text" name="UserName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            <input type="password" class="form-control" name="Password">
                        </div>
                        <button type="submit" class="btn btn-primary submit mb-4">Login</button>
                        <p><a href="#"> Don't have an account?</a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>