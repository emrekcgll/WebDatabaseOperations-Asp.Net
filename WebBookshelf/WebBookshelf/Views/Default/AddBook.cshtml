@model WebBookshelf.Models.Book
@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div class="form-control">
        <label>Kitap Adı:</label>
        <input class="form-control" type="text" name="BookName" />
        <br />
        <label>Yazar:</label>
        <input class="form-control" type="text" name="BookWriterName" />
        <label>Kategori:</label>
        @Html.DropDownListFor(x => x.Category.CategoryId, (List<SelectListItem>)ViewBag.value, new { @class = "form-control" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>